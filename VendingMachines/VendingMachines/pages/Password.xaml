<Page x:Class="VendingMachines.pages.Password"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VendingMachines.pages"
      mc:Ignorable="d" 
      d:DesignHeight="90" d:DesignWidth="557"
      Title="Password">

    <Grid Background="#FFC9BDBD">
        <StackPanel>
            <Label Content="Введите секретный код" BorderThickness="0,3,0,1" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Height="33"/>
            <PasswordBox Width="120" x:Name="txtSecret"/>
            <Button Content="Войти" Width="100" Margin="0,5,0,0" Click="AdminJoin" x:Name="btnAdmin"/>
        </StackPanel>

    </Grid>
</Page>
